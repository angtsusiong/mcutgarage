
<% if @user.errors.full_messages.blank? %>
    swal('<%= t('helpers.form.update_success', model: User.model_name.human) %>', '', 'success')
        .then(function(){
            window.location.href = '<%= users_url(@user, ignore_set_navigation: true) %>';
        });
<% else %>
    $( "span.full_error" ).remove();

    swal('<%= t('helpers.form.update_error', model: User.model_name.human) %>', '<%= @user.errors.full_messages.join('\n') %>', 'error');

    <% @user.errors.messages.each do |message| %>
        $( "<span class='error full_error'><%= message[1].join('; ') %></span>" ).insertAfter( "#user_<%= message[0].to_s %>" );
    <% end %>
<% end %>
