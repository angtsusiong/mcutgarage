<% readonly = (defined? readonly) ? readonly : false -%>

<%= simple_form_for(@user, url: '/users/'+@user.id.to_s, remote: true, html: { multipart: true }) do | f | %>
    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('email') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :email, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :email, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('remember_created_at') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :remember_created_at, as: :string, class: 'an-form-control  datetimepicker', disabled: readonly %>
            <%= f.full_error :remember_created_at, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('sign_in_count') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :sign_in_count, class: 'an-form-control  numeric', readonly: readonly %>
            <%= f.full_error :sign_in_count, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('current_sign_in_at') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :current_sign_in_at, as: :string, class: 'an-form-control  datetimepicker', disabled: readonly %>
            <%= f.full_error :current_sign_in_at, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('last_sign_in_at') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :last_sign_in_at, as: :string, class: 'an-form-control  datetimepicker', disabled: readonly %>
            <%= f.full_error :last_sign_in_at, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('current_sign_in_ip') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :current_sign_in_ip, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :current_sign_in_ip, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('last_sign_in_ip') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :last_sign_in_ip, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :last_sign_in_ip, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('phone') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :phone, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :phone, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('self_intro') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :self_intro, class: 'an-form-control  froala-editor', readonly: readonly %>
            <%= f.full_error :self_intro, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= User.human_attribute_name('name') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :name, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :name, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='row'>
        <div class='col-sm-12'>
            <%= f.submit t('button.save'), class: 'btn btn-primary pull-right' unless readonly %>
            <%= link_to t('button.back'), back_users_path, class: 'btn btn-default pull-right m-r-10' %>
            <%= link_to t('button.back'), back_users_path, class: 'btn btn-default pull-right m-r-10' %>
        </div>
    </div>
<% end %>



<%= content_for :post_scripts do %>
    <%= javascript_include_tag 'users' %>
<% end %>
