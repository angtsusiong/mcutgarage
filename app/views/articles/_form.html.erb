<% readonly = (defined? readonly) ? readonly : false -%>

<%= simple_form_for(@article, url: '//articles/'+@article.id.to_s, remote: true, html: { multipart: true }) do | f | %>
    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= Article.human_attribute_name('title') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :title, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :title, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= Article.human_attribute_name('content') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :content, class: 'an-form-control  froala-editor', readonly: readonly %>
            <%= f.full_error :content, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= Article.human_attribute_name('status') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :status, collection: Article.statuses_i18n, class: 'an-form-control  select2', include_blank: false, disabled: readonly %>
            <%= f.full_error :status, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= Article.human_attribute_name('published_at') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :published_at, as: :string, class: 'an-form-control  datetimepicker', disabled: readonly %>
            <%= f.full_error :published_at, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='row'>
        <div class='col-sm-12'>
            <%= f.submit t('button.save'), class: 'btn btn-primary pull-right' unless readonly %>
            <%= link_to t('button.back'), back_articles_path, class: 'btn btn-default pull-right m-r-10' %>
            <%= link_to t('button.back'), back_articles_path, class: 'btn btn-default pull-right m-r-10' %>
        </div>
    </div>
<% end %>



<%= content_for :post_scripts do %>
    <%= javascript_include_tag 'articles' %>
<% end %>
