<% readonly = (defined? readonly) ? readonly : false -%>

<%= simple_form_for([:admin, @project_category], url: '/admin/project_categories/'+@project_category.id.to_s, remote: true, html: { multipart: true }) do | f | %>
    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= ProjectCategory.human_attribute_name('name') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :name, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :name, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= ProjectCategory.human_attribute_name('brief_intro') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :brief_intro, class: 'an-form-control  froala-editor', readonly: readonly %>
            <%= f.full_error :brief_intro, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= ProjectCategory.human_attribute_name('is_active') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :is_active, as: :boolean, disabled: readonly %>
            <%= f.full_error :is_active, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='row'>
        <div class='col-sm-12'>
            <%= f.submit t('button.save'), class: 'btn btn-primary pull-right' unless readonly %>
            <%= link_to t('button.back'), back_admin_project_categories_path, class: 'btn btn-default pull-right m-r-10' %>
            <%= link_to t('button.back'), back_admin_project_categories_path, class: 'btn btn-default pull-right m-r-10' %>
        </div>
    </div>
<% end %>



<%= content_for :post_scripts do %>
    <%= javascript_include_tag 'admin/project_categories' %>
<% end %>
