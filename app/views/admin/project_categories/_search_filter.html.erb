<div class="panel panel-default an-sidebar-search filter-condition-panel">

        <div class="panel-heading" role="tab">
            <h4 class="panel-title">
                <a class="collapsed" role="button" href="#project_categories_search_panel" data-toggle="collapse"
                    data-parent="#accordion" aria-expanded="false" aria-controls="project_categories_search_panel">
            <%= t('helpers.form.search_filter_block') %>
                </a>
            </h4>
        </div>

        <div id="project_categories_search_panel" class="panel-collapse collapse" role="search panel">
            <div class="panel-body">

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class='control-label'><%= t('helpers.form.keyword_search_label') %></label>
                    </div>
                    <div class="col-sm-10">
                        <input type='text' id='keyword_search' placeholder="<%= t('helpers.form.keyword_search') %>"
                                                               class='an-form-control no-redius border-bottom m-0 text_color'>
                    </div>
                    <div class="clear"></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= ProjectCategory.human_attribute_name('name') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='name' placeholder='<%= t('helpers.form.placeholder', column: ProjectCategory.human_attribute_name('name')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-name filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= ProjectCategory.human_attribute_name('brief_intro') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='brief_intro' placeholder='<%= t('helpers.form.placeholder', column: ProjectCategory.human_attribute_name('brief_intro')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-brief_intro filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= ProjectCategory.human_attribute_name('is_active') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <%= simple_form_for(:admin) do | f | %>
                            <%= f.input_field :is_active, name: 'is_active', collection:[[t('helpers.select.true_option'),true], [t('helpers.select.false_option'),false]],
                                class: 'an-form-control select2 filter-is_active filter-select-condition', include_blank: true %>
                        <% end %>
                    </div>
                    <div class='clear'></div>
                </div>




                <div class="form-group pull-right">
                    <div class="col-sm-12">
                        <button class="btn btn-default reset-button">
                            <%= t('button.reset') %>
                        </button>
                        <button class="btn btn-info filter-button">
                            <%= t('button.filter') %>
                        </button>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        </div>

</div>
