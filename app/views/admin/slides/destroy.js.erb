
<% if @slide.errors.full_messages.blank? %>
    swal('<%= t('helpers.form.destroy_success', model: Slide.model_name.human) %>', '', 'success');
<% else %>
    $( "span.full_error" ).remove();

    swal('<%= t('helpers.form.destroy_error', model: Slide.model_name.human) %>', '<%= @slide.errors.full_messages.join('\n') %>', 'error');

     <% @slide.errors.messages.each do |message| %>
        $( "<span class='error full_error'><%= message[1].join('; ') %></span>" ).insertAfter( "#slide_<%= message[0].to_s %>" );
    <% end %>
<% end %>
