<div class="panel panel-default an-sidebar-search filter-condition-panel">

        <div class="panel-heading" role="tab">
            <h4 class="panel-title">
                <a class="collapsed" role="button" href="#versions_search_panel" data-toggle="collapse" 
                    data-parent="#accordion" aria-expanded="false" aria-controls="versions_search_panel">
            <%= t('helpers.form.search_filter_block') %>
                </a>
            </h4>
        </div>

        <div id="versions_search_panel" class="panel-collapse collapse" role="search panel">
            <div class="panel-body">

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class='control-label'><%= t('helpers.form.keyword_search_label') %></label>
                    </div>
                    <div class="col-sm-10">
                        <input type='text' id='keyword_search' placeholder="<%= t('helpers.form.keyword_search') %>"
                                                               class='an-form-control no-redius border-bottom m-0 text_color'>
                    </div>
                    <div class="clear"></div>
                </div>

    
                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= Version.human_attribute_name('item_type') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='item_type' placeholder='<%= t('helpers.form.placeholder', column: Version.human_attribute_name('item_type')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-item_type filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= Version.human_attribute_name('event') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='event' placeholder='<%= t('helpers.form.placeholder', column: Version.human_attribute_name('event')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-event filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= Version.human_attribute_name('whodunnit') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='whodunnit' placeholder='<%= t('helpers.form.placeholder', column: Version.human_attribute_name('whodunnit')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-whodunnit filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= Version.human_attribute_name('object') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='object' placeholder='<%= t('helpers.form.placeholder', column: Version.human_attribute_name('object')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-object filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= Version.human_attribute_name('object_changes') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='object_changes' placeholder='<%= t('helpers.form.placeholder', column: Version.human_attribute_name('object_changes')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-object_changes filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


    
                <div class='form-group'>
                    <label class='col-sm-2 control-label'><%= Version.human_attribute_name('item_id') %></label>
                    <div class='col-sm-10'>
                        <div class='col-sm-5 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='number' name='item_id_start' placeholder='<%= t('helpers.form.start_number') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color filter-item_id filter-range-condition'>
                            </div>
                        </div>
                        <div class='col-sm-1 no-padding t-center'> ~ </div>
                        <div class='col-sm-6 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='number' name='item_id_end' placeholder='<%= t('helpers.form.end_number') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color filter-item_id filter-range-condition'>
                            </div>
                        </div>
                        <div class='clear'></div>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class="form-group pull-right">
                    <div class="col-sm-12">
                        <button class="btn btn-default reset-button">
                            <%= t('button.reset') %>
                        </button>
                        <button class="btn btn-info filter-button">
                            <%= t('button.filter') %>
                        </button>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        </div>

</div>
