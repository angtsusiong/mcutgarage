<% readonly = (defined? readonly) ? readonly : false -%>

<%= simple_form_for([:admin, @related_resource], url: '/admin/related_resources/'+@related_resource.id.to_s, remote: true, html: { multipart: true }) do | f | %>
    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= RelatedResource.human_attribute_name('resources_category_id') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :resources_category_id, class: 'an-form-control  numeric', readonly: readonly %>
            <%= f.full_error :resources_category_id, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= RelatedResource.human_attribute_name('title') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :title, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :title, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= RelatedResource.human_attribute_name('content') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :content, class: 'an-form-control  froala-editor', readonly: readonly %>
            <%= f.full_error :content, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='form-group'>
        <label class='col-sm-2 form-group'><%= RelatedResource.human_attribute_name('url') %></label>
        <div class='col-sm-10'>
            <%= f.input_field :url, class: 'an-form-control ', readonly: readonly %>
            <%= f.full_error :url, class: 'full_error' %>
        </div>
        <div class='clear'></div>
   </div>

    <div class='row'>
        <div class='col-sm-12'>
            <%= f.submit t('button.save'), class: 'btn btn-primary pull-right' unless readonly %>
            <%= link_to t('button.back'), back_admin_related_resources_path, class: 'btn btn-default pull-right m-r-10' %>
            <%= link_to t('button.back'), back_admin_related_resources_path, class: 'btn btn-default pull-right m-r-10' %>
        </div>
    </div>
<% end %>



<%= content_for :post_scripts do %>
    <%= javascript_include_tag 'admin/related_resources' %>
<% end %>
