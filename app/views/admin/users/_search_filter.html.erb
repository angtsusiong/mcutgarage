<div class="panel panel-default an-sidebar-search filter-condition-panel">

        <div class="panel-heading" role="tab">
            <h4 class="panel-title">
                <a class="collapsed" role="button" href="#users_search_panel" data-toggle="collapse" 
                    data-parent="#accordion" aria-expanded="false" aria-controls="users_search_panel">
            <%= t('helpers.form.search_filter_block') %>
                </a>
            </h4>
        </div>

        <div id="users_search_panel" class="panel-collapse collapse" role="search panel">
            <div class="panel-body">

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class='control-label'><%= t('helpers.form.keyword_search_label') %></label>
                    </div>
                    <div class="col-sm-10">
                        <input type='text' id='keyword_search' placeholder="<%= t('helpers.form.keyword_search') %>"
                                                               class='an-form-control no-redius border-bottom m-0 text_color'>
                    </div>
                    <div class="clear"></div>
                </div>

    
                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= User.human_attribute_name('email') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='email' placeholder='<%= t('helpers.form.placeholder', column: User.human_attribute_name('email')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-email filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= User.human_attribute_name('current_sign_in_ip') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='current_sign_in_ip' placeholder='<%= t('helpers.form.placeholder', column: User.human_attribute_name('current_sign_in_ip')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-current_sign_in_ip filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <div class="col-sm-2">
                        <label class='control-label'><%= User.human_attribute_name('last_sign_in_ip') %></label>
                    </div>
                    <div class='col-sm-10'>
                        <input type='text' name='last_sign_in_ip' placeholder='<%= t('helpers.form.placeholder', column: User.human_attribute_name('last_sign_in_ip')) %>'
                            class='an-form-control no-redius border-bottom m-0 text_color filter-last_sign_in_ip filter-condition'>
                    </div>
                    <div class='clear'></div>
                </div>


    
                <div class='form-group'>
                    <label class='col-sm-2 control-label'><%= User.human_attribute_name('remember_created_at') %></label>
                    <div class='col-sm-10'>
                        <div class='col-sm-5 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='text' name='remember_created_at_start' placeholder='<%= t('helpers.form.start_at') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color datetimepicker filter-remember_created_at filter-range-condition'>
                            </div>
                        </div>
                        <div class='col-sm-1 no-padding t-center'> ~ </div>
                        <div class='col-sm-6 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='text' name='remember_created_at_end' placeholder='<%= t('helpers.form.end_at') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color datetimepicker filter-remember_created_at filter-range-condition'>
                            </div>
                        </div>
                        <div class='clear'></div>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <label class='col-sm-2 control-label'><%= User.human_attribute_name('sign_in_count') %></label>
                    <div class='col-sm-10'>
                        <div class='col-sm-5 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='number' name='sign_in_count_start' placeholder='<%= t('helpers.form.start_number') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color filter-sign_in_count filter-range-condition'>
                            </div>
                        </div>
                        <div class='col-sm-1 no-padding t-center'> ~ </div>
                        <div class='col-sm-6 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='number' name='sign_in_count_end' placeholder='<%= t('helpers.form.end_number') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color filter-sign_in_count filter-range-condition'>
                            </div>
                        </div>
                        <div class='clear'></div>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <label class='col-sm-2 control-label'><%= User.human_attribute_name('current_sign_in_at') %></label>
                    <div class='col-sm-10'>
                        <div class='col-sm-5 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='text' name='current_sign_in_at_start' placeholder='<%= t('helpers.form.start_at') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color datetimepicker filter-current_sign_in_at filter-range-condition'>
                            </div>
                        </div>
                        <div class='col-sm-1 no-padding t-center'> ~ </div>
                        <div class='col-sm-6 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='text' name='current_sign_in_at_end' placeholder='<%= t('helpers.form.end_at') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color datetimepicker filter-current_sign_in_at filter-range-condition'>
                            </div>
                        </div>
                        <div class='clear'></div>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class='form-group'>
                    <label class='col-sm-2 control-label'><%= User.human_attribute_name('last_sign_in_at') %></label>
                    <div class='col-sm-10'>
                        <div class='col-sm-5 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='text' name='last_sign_in_at_start' placeholder='<%= t('helpers.form.start_at') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color datetimepicker filter-last_sign_in_at filter-range-condition'>
                            </div>
                        </div>
                        <div class='col-sm-1 no-padding t-center'> ~ </div>
                        <div class='col-sm-6 no-padding'>
                            <div class='col-sm-12 no-padding'>
                                <input type='text' name='last_sign_in_at_end' placeholder='<%= t('helpers.form.end_at') %>'
                                       class='an-form-control no-redius border-bottom m-0 text_color datetimepicker filter-last_sign_in_at filter-range-condition'>
                            </div>
                        </div>
                        <div class='clear'></div>
                    </div>
                    <div class='clear'></div>
                </div>


                <div class="form-group pull-right">
                    <div class="col-sm-12">
                        <button class="btn btn-default reset-button">
                            <%= t('button.reset') %>
                        </button>
                        <button class="btn btn-info filter-button">
                            <%= t('button.filter') %>
                        </button>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        </div>

</div>
